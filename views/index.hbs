<div id="timer">00:00</div>
<div id="mapArea">
    <div id="blueTeam">
        <ul class="championlist">
            {{#participants}}
                {{#isBlueTeam teamId}}
                    <li>
                        <div class="imageDiv">
                            <img class="championImage" src="{{championImage}}"
                                 title="{{championName}}"/>
                            <img class="tierImage leftTierImage" src="images/{{tierImage}}"
                                 title="{{tierName}}">
                        </div>
                    </li>
                {{/isBlueTeam}}
            {{/participants}}
        </ul>
    </div>
    <div id="map"></div>
    <div id="purpleTeam">
        <ul class="championlist">
            {{#participants}}
                {{#isPurpleTeam teamId}}
                    <li>
                        <div class="imageDiv">
                            <img class="championImage" src="{{championImage}}"
                                 title="{{championName}}"/>
                            <img class="tierImage rightTierImage" src="images/{{tierImage}}"
                                 title="{{tierName}}">
                        </div>
                    </li>
                {{/isPurpleTeam}}
            {{/participants}}
        </ul>
    </div>
</div>
